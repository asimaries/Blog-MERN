{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}